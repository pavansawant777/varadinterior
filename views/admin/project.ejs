<%- include("navbar.ejs")%>

    <div class="card card-body rounded-0 p-3 shadow">

        <h1 class="text-center py-2">Project Section</h1>

        <form action="/admin/save_project" method="post" enctype="multipart/form-data">

            <div class="row">
                <div class="col-md-6">
                    <label class="py-3">Type of Project</label>
                    <input type="text" name="project_type" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="py-3">Project Name</label>
                    <input type="text" name="project_name" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="py-3">Client Name</label>
                    <input type="text" name="client_name" class="form-control">
                </div>
                <div class="col-md-6">
                    <label class="py-3">Select Project Image</label>
                    <input type="file" name="project_img" class="form-control">
                </div>

                <div class="col-md-6">
                    <label class="py-3">Project Date</label>
                    <input type="date" name="project_date" class="form-control">
                </div>

                <div class="col-md-6">
                    <label class="py-3">Project Budget</label>
                    <input type="number" name="project_budget" class="form-control">
                </div>

                <div class="col-md-6">
                    <label class="py-3">Project Basic Information</label>
                    <textarea name="project_basic_info" class="form-control" rows="3"></textarea>
                </div>

                

                <div class="col-md-6">
                    <label class="py-3">Project Challenges</label>
                    <textarea name="project_challenge" class="form-control" rows="5"></textarea>
                </div>

                

                <div class="col-md-12 text-center py-3">
                    <button class="btn btn-primary">Save Project</button>
                </div>
            </div>
        </form>
    </div>


    <div class="card card-body rounded-0 p-3 shadow table-responsive">
        <h1 class="text-center py-2"> Project Details</h1>
        <table class="table table-bordered ">
            <tr>
                <th>Sr</th>
                <th>Actions</th>
                <th>Project Type </th>
                <th>Project Name</th>
                <th>Client Name</th>
                <th>Project Image</th>
                <th>Project Date</th>
                <th>Project Budget</th>
                <th>Project Basic Info</th>
                <th>Project Challenge</th>
            </tr>

            <%sr=1; for(i of pdata) { %>
                <tr>
                    <td><%=sr++%></td>
                    <td>
                        <a href="/admin/project_delete/<%=i.id%>" ><button class="btn btn-sm btn-danger"> <i class="fa-solid fa-trash"></i></button></a>
                        <a href="/admin/project_update/<%=i.id%>" ><button class="btn btn-sm btn-primary"> <i class="fa fa-edit"></i></button></a>
                    </td>
                    <td><%=i.project_type%></td>
                    <td><%=i.project_name%></td>
                    <td><%=i.client_name%></td>
                    <td> <img src="/uploads/<%=i.project_img%>" width="100px"> </td>
                    <td><%=i.project_date%></td>
                    <td><%=i.project_budget%></td>
                    <td><%=i.project_basic_info%></td>
                    <td><%=i.project_challenge%></td>

                </tr>

            <% } %>
        </table>
    </div>



<%- include("footer.ejs")%>