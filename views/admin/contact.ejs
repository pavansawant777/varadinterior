<%- include("navbar.ejs") %>


    <div class="card card-body rounded-0 p-3 shadow">
        <h1 class="text-center py-2">Contact Section</h1>


        <form action="/admin/update_contact" method="post">

            <input type="hidden" name="id" value="<%=data.id%>">

            <div class="row">
                <div class="col-md-6">
                    <label class="mt-3 mb-3">Office Address</label>
                    <input type="text" class="form-control" name="contact_add" value="<%=data.contact_add%>">
                </div>

                <div class="col-md-6">
                    <label class="mt-3 mb-3">Office Email</label>
                    <input type="email" class="form-control" name="contact_email" value="<%=data.contact_email%>">
                </div>

                <div class="col-md-6">
                    <label class="mt-3 mb-3">Office Mobile No.</label>
                    <input type="number" class="form-control" name="contact_mobile" value="<%=data.contact_mobile%>">
                </div>

                <div class="col-md-6">
                    <label class="mt-3 mb-3">Office Timing</label>
                    <div class="col-md-12">
                        <div class="form-floating mb-3">
                            <input type="time" class="form-control" id="floatingInput" name="contact_am" value="<%=data.contact_am%>" >
                            <label for="floatingInput">Am</label>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-floating">
                            <input type="time" class="form-control" id="floatingPassword"  name="contact_pm" value="<%=data.contact_pm%>">
                            <label for="floatingPassword">Pm</label>
                        </div>
                    </div>
                </div>

                <div class="col-md-12 text-center mt-3 mb-3">
                    <button class="btn btn-primary">Save Contact</button>
                </div>
            </div>
        </form>
    </div>




