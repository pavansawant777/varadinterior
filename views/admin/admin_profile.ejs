<%- include("navbar.ejs") %>


<div class="card card-body rounded-0 p-3 shadow">
    <h1 class="text-center p-3">Admin Details</h1>
    <form action="/admin/save_admin_profile" method="post" enctype="multipart/form-data">
        <input type="hidden" name="id" value="<%=adata.id%>">
        <div class="row">

            <div class="col-md-6">
                <label class="m-3">Admin Name</label>
                <input type="text" name="admin_name" class="form-control" value="<%=adata.admin_name%>">

            </div>

            <div class="col-md-3">
                <label class="m-3">Select Admin Photo</label>
                <input type="file" name="admin_img" class="form-control">
            </div>

            <div class="col-md-3">
                <label>Admin Photo</label>
                <img src="/uploads/<%=adata.admin_img%>" height="150px" class="w-100">
            </div>

            <div class="col-md-6">
                <label class="m-3">Password</label>
                <input type="password" name="admin_pass" class="form-control" value="<%=adata.admin_name%>">

            </div>

            <div class="col-md-12 m-3 text-center">
                <button class="btn btn-primary">Update Profile</button>
            </div>
            

        </div>
    </form>
</div>
