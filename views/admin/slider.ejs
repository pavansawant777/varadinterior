<%- include("navbar.ejs") %>

<div class="card card-body rounded-0 shadow py-3 ">

    <h2 class="text-center">Slider Section </h2>

    <form action="/admin/save_slider" method="post" enctype="multipart/form-data" class="mt-3">
        <div class="row">
            <div class="col-md-6">
                <label class="mt-3">Select Image</label>
                <input type="file" class="form-control mt-3" name="slider_img" accept="Image/jpeg , Image/png">
            </div>

            <div class="col-md-6">
                <label class="mt-3">Slider Heading</label>
                <input type="text" class="form-control mt-3" name="slider_head">
            </div>

            <div class="col-md-6">
                <label class="mt-3 mb-2">Slider Sub Heading</label>
                <textarea class="form-control" name="slider_subhead" cols="50" rows="7"></textarea>
            </div>

            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <label class="mt-3 mb-3">Button Name</label>
                        <input type="text" name="slider_btn_name" class="form-control">
                    </div>

                    <div class="col-md-12">
                        <label class="mt-3 mb-3">Button URL</label>
                        <input type="url" name="slider_btn_url" class="form-control">
                    </div>
                </div>
            </div>

            <div class="col-md-12 text-center mt-3 mb-3">
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </form>
</div>

<div class="card card-body rounded-0 shadow table-responsive py-4 ">
    <h2 class="text-center">Slider Information</h2>
    
    <table class="table table-bordered w-100  ">
        <tr>
            <th>SR</th>
            <th>Action</th>
            <th>Slider Image</th>
            <th>Slider Heading</th>
            <th>Slider Sub Head</th>
            <th>Slider BTN Name</th>
            <th>Slider BTN URL</th>
        </tr>

        <% sr=1; for(i of sdata) { %>
            <tr>
                <td><%=sr++%></td>
                <td>
                    <a href="/admin/delete_slider/<%=i.id%>" ><button class="btn btn-sm mt-1 text-center btn-danger"> <i class="fa-solid fa-trash"></i> </button></a>
                    <a href="/admin/edit_slider/<%=i.id%>" ><button class="btn btn-sm mt-1 text-center btn-primary"> <i class="fa fa-edit"></i> </button></a>
                    
                </td>
                <td> <img src="/uploads/<%=i.slider_img%>" width="200px"> </td>
                <td><%=i.slider_head%></td>
                <td><%=i.slider_subhead%></td>
                <td><%=i.slider_btn_name%></td>
                <td><%=i.slider_btn_url%></td>
            </tr>

        <% } %>
        
    </table>
</div>


<%- include("footer.ejs") %>