<%- include("navbar.ejs")%>



<div class="card card-body rounded-0 p-3 shadow ">
    <h1 class="text-center">Service Page</h1>


    <form action="/admin/save_service" method="post">

        <div class="row">
            <div class="col-md-6">
                <label class="mt-3 mb-2">Plan' Name</label>
                <input type="text" name="service_plan" class="form-control">
            </div>

            <div class="col-md-6">
                <label class="mt-3 mb-2">Service Plan Rate</label>
                <input type="number" name="service_rate" class="form-control">
            </div>

           

            <div class="col-md-12">
                <label class="mt-3 mb-2">Service Plan's Features</label>
                <textarea name="service_feature" id="editor" class="form-control"></textarea>
                <!-- <textarea name="service_feature" class="form-control" rows="5" id="editor"></textarea> -->

            
            </div>

            <div class="col-md-12 text-center">
                <button class="btn btn-primary my-3" >Submit Service</button>
            </div>

        </div>

    </form>
</div>


<div class="card card-body rounded-0 p-3 shadow table-responsive">
    <h1 class="text-center py-2">Service Details</h1>
    <table class="table table-bordered ">
        <tr>
            <th>Sr</th>
            <th>Action</th>
            <th>Service Plan Name</th>
            <th>Service Plane Rate</th>
            <th>Service Features</th>
        </tr>

        <%sr=1; for(i of sdata) { %>

            <tr>
                <td><%=sr++%></td>
                <td>
                    <a href="/admin/delete_service/<%=i.id%>" ><button class="btn btn-sm mt-1 text-center btn-danger"> <i class="fa-solid fa-trash"></i> </button></a>
                    <a href="/admin/edit_service/<%=i.id%>" ><button class="btn btn-sm mt-1 text-center btn-primary"> <i class="fa fa-edit"></i> </button></a>
                    
                    
                </td>
                <td><%=i.service_plan%></td>
                <td><%=i.service_rate%></td>
                <td><%=i.service_feature%></td>

                
            </tr>
        <% } %>


    </table>
</div>





   








