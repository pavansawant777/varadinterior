<%- include("navbar.ejs")%>

<div class="card card-body rounded-0 p-3 shadow ">
    <h1 class="text-center">Service Page</h1>


    <form action="/admin/update_service" method="post">

        <input type="hidden" name="id" value="<%=sdata.id%>">

        <div class="row">
            <div class="col-md-6">
                <label class="mt-3 mb-2">Plan' Name</label>
                <input type="text" name="service_plan" class="form-control" value="<%=sdata.service_plan%>">
            </div>

            <div class="col-md-6">
                <label class="mt-3 mb-2">Service Plan Rate</label>
                <input type="number" name="service_rate" class="form-control" value="<%=sdata.service_rate%>" >
            </div>

           

            <div class="col-md-12">
                <label class="mt-3 mb-2">Service Plan's Features</label>
                <textarea name="service_feature" id="editor" class="form-control"><%=sdata.service_feature%></textarea>
                <!-- <textarea name="service_feature" class="form-control" rows="5" id="editor"></textarea> -->

            
            </div>

            <div class="col-md-12 text-center">
                <button class="btn btn-warning my-3" >Update Service</button>
            </div>

        </div>

    </form>
</div>


