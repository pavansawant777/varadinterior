<%- include("navbar.ejs")%>


    <div class="card card-body rounded-0 p-3 shadow">
        <h3 class="text-center my-5">Welcome Ganesh</h3>
        <input type="text"  value="<%=idata.id%>">
        <input type="text"  value="<%=admin.admin_id%>">

       <form action="/admin/save_profile" method="post" enctype="multipart/form-data">


        <div class="row">
            <div class="col-md-3">
                <label class="my-2">Change Image</label>
                <input type="file" name="admin_img" class="form-control">
            </div>
            <div class="col-md-3">
                
                <img src="/uploads/<%=idata.admin_img%>" alt="" class="img-fluid">
            </div>

            <div class="col-md-6">
                <label class="my-2">Change Password</label>
                <input type="password" name="admin_pass" id="" class="form-control" value="<%=admin.admin_password%>">
            </div>

            <div class="col-md-12 text-center mt-5">
                <button class="btn btn-primary">Save Profile</button>
            </div>
        </div>

       </form>

        
    </div>









