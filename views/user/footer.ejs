  <script>
          
      var count = document.getElementsByClassName("count");
      var inc = Array(count.length).fill(1); // Initialize increment array for each counter
      var intervalTime = 50; // Interval time in ms
      var countingInterval; // Variable to store the interval
      var isInView = false; // To track if the element is currently in view

      function intervalFun() {
          for (let i = 0; i < count.length; i++) {
              let maxValue = parseInt(count[i].getAttribute("max-data"));
              if (inc[i] < maxValue) {
                  inc[i]++;
                  count[i].innerHTML = inc[i];
              }
          }
      }

      function resetCounters() {
          for (let i = 0; i < count.length; i++) {
              count[i].innerHTML = 1; // Reset to starting value
          }
          inc.fill(1); // Reset increment values
      }

      window.onscroll = function () {
          var topElem = main.offsetTop;
          var btmElem = main.offsetTop + main.clientHeight;
          var topScreen = window.pageYOffset;
          var btmScreen = window.pageYOffset + window.innerHeight;

          // Check if the main element is in view
          if (btmScreen > topElem && topScreen < btmElem) {
              if (!isInView) { // Only start interval if it's not already in view
                  isInView = true;
                  countingInterval = setInterval(intervalFun, intervalTime); // Start counting
              }
          } else {
              if (isInView) { // Only reset if the element just moved out of view
                  isInView = false;
                  clearInterval(countingInterval); // Stop counting
                  resetCounters(); // Reset counters
              }
          }
      };



      document.addEventListener("DOMContentLoaded", function() {
          const signup = document.querySelector('.signupbtn');
          const login = document.querySelector('.loginbtn');
          const namefield = document.querySelector('.namefield');
          const numfield = document.querySelector('.numfield');
          const emailfield = document.querySelector('.emailfield');
          const passwordfield = document.querySelector('.passwordfield');
          const title = document.querySelector('.title');
          const underline = document.querySelector('.underline');
          
          // Function to set up Sign Up view
          function setUpSignUpView() {
              title.innerText = 'Sign Up';
              underline.style.width = '90px';
              namefield.classList.add('show');
              numfield.classList.add('show');
              emailfield.classList.add('show');
              passwordfield.classList.add('show');
              signup.classList.remove('disable');
              login.classList.add('disable');
          }

          // Function to set up Log In view
          function setUpLoginView() {
              title.innerText = 'Log In';
              underline.style.width = '70px';
              namefield.classList.remove('show');
              numfield.classList.remove('show');
              emailfield.classList.add('show');
              passwordfield.classList.add('show');
              signup.classList.add('disable');
              login.classList.remove('disable');
          }

          // Set initial view to Sign Up
          setUpSignUpView();

          // Event listeners for toggling views
          login.addEventListener('click', setUpLoginView);
          signup.addEventListener('click', setUpSignUpView);
      });





        
        
