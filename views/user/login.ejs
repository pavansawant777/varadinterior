<section class="modal-bg">
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content">
                <div class="modal-body p-0">
                    <div class="form_container">
                        <div class="form-box text-center rounded-4 shadow">
                            <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>
                            <h1 class="title">Sign Up</h1>
                            <div class="underline rounded-4"></div>
                            <form action="/save_signup" method="post">
                                <!-- Username field (only for Sign Up) -->
                                
  
                                <!-- Mobile field (only for Sign Up) -->
                                
  
                                <!-- Email field (shown for both Sign Up and Log In) -->
                                <div class="input_group">
                                    <div class="input_field emailfield">
                                        <i class="fa-regular fa-envelope"></i>
                                        <input class="bg-transparent" type="email" placeholder="Enter Email" name="email">
                                    </div>
                                </div>
  
                                <!-- Password field (shown for both Sign Up and Log In) -->
                                <div class="input_group">
                                    <div class="input_field passwordfield">
                                        <i class="fa-solid fa-key"></i>
                                        <input class="bg-transparent" type="password" placeholder="Enter Password" name="password">
                                    </div>
                                </div>
  
                                <!-- Toggle between Sign Up and Log In -->
                                <div class="btn-field">
                                   
                                    <button class="loginbtn disable" type="submit">Log in</button>
                                    
                                </div>
                                
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </section>






  <section>

    <div class="form_container">
        <div class="form-box text-center rounded-4 shadow">
            
            <h1 class="title">Log in</h1>
            <div class="underline rounded-4"></div>
            <form action="/save_login" method="post">
                
                

                <!-- Email field (shown for both Sign Up and Log In) -->
                <div class="input-group input_login  ">
                    <span class="input-group-text border-0 bg-transparent">
                        <i class="fa-regular fa-envelope fs-5"></i>
                    </span>
                    <input type="email" class="form-control border-0 " name="email" placeholder="Enter Email" aria-label="Username" >
                </div>

                <!-- Password field (shown for both Sign Up and Log In) -->

                <div class="input-group input_login mt-3  ">
                    <span class="input-group-text border-0 bg-transparent">
                        <i class="fa-solid fa-key"></i>
                    </span>
                    <input type="password" class="form-control border-0 " name="password" placeholder="Enter Password" aria-label="Username" >
                </div>
               

                

                 

                <!-- Toggle between Sign Up and Log In -->
                 <div class="col-md-12 text-center">
                    <div class="btn-fields">
                    
                        <button class="loginbtn mb-3 " type="submit">Log in</button>
                        
                    </div>

                </div>
                
            </form>
        </div>
    </div>
    



  </section>



  