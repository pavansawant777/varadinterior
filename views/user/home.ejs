    $(document).ready(function(){
      $('.image-slider').slick({
          infinite: true,  // Continuously loop
          slidesToShow: 3,  // Show 3 images at once on desktop
          slidesToScroll: 1,  // Scroll one image at a time
          autoplay: true,  // Enable auto-scrolling
          autoplaySpeed: 3000,  // Set speed for auto-scrolling (in milliseconds)
          arrows: false,  // Optional: hide the navigation arrows
          dots: true,  // Optional: show dots for navigation
          responsive: [
            {
              breakpoint: 768,  // Mobile screen size
              settings: {
                slidesToShow: 1  // Show only one image at a time on mobile
              }
            }
          ]
      });
    });


</script>




