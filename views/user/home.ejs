<section class="modal-bg">
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-fullscreen">
          <div class="modal-content">
              <div class="modal-body p-0">
                  <div class="form_container">
                      <div class="form-box text-center rounded-4 shadow">
                          <button type="button" class="btn-close float-end" data-bs-dismiss="modal" aria-label="Close"></button>
                          <h1 class="title">Sign Up </h1>
                          <div class="underline rounded-4"></div>
                          <form action="/save_signup" method="post">
                              <!-- Username field (only for Sign Up) -->
                              <div class="input_group">
                                  <div class="input_field namefield">
                                      <i class="fa-solid fa-user"></i>
                                      <input class="bg-transparent" type="text" placeholder="Full Name" name="fname">
                                  </div>
                              </div>

                              <!-- Mobile field (only for Sign Up) -->
                              <div class="input_group">
                                  <div class="input_field numfield">
                                      <i class="fa-solid fa-mobile-screen"></i>
                                      <input class="bg-transparent" type="number" placeholder="Mobile" name="mobile">
                                  </div>
                              </div>

                              <!-- Email field (shown for both Sign Up and Log In) -->
                              <div class="input_group">
                                  <div class="input_field emailfield">
                                      <i class="fa-regular fa-envelope"></i>
                                      <input class="bg-transparent" type="email" placeholder="Enter Email" name="email">
                                  </div>
                              </div>

                              <!-- Password field (shown for both Sign Up and Log In) -->
                              <div class="input_group">
                                  <div class="input_field passwordfield">
                                      <i class="fa-solid fa-key"></i>
                                      <input class="bg-transparent" type="password" placeholder="Enter Password" name="password">
                                  </div>
                              </div>

                              <!-- Toggle between Sign Up and Log In -->
                              <div class="btn-field">
                                  <button class="signupbtn" type="su" onclick="submitForm('/save_signup')">Sign Up</button>
                                  <button class="loginbtn disable" type="button" onclick="submitForm('/login')">Log in</button>
                                  
                              </div>
                              <div class="row text-center mt-2">

                                <div class="col-md-12">
                                  <a href="/login">Login</a>



                                </div>

                              </div>
                          </form>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
</section>



















    
